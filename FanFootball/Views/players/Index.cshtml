@model List<FanFootball.Models.player>


<div style="color: white;">
    <h1>Fantasy Football Players</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Team</th>
                <th>Age</th>
                <th>Points</th>
                <th>ADP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Position</td>
                    <td>@p.Team</td>
                    <td>@p.Age</td>
                    <td>@p.Points</td>
                    <td>@p.ADP</td>
                </tr>
            }
        </tbody>
    </table>
</div>